.container
  %h2
    Sign Up

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal", :role => "form" }) do |f|
    = devise_error_messages!

    .form-group
      = f.label :email, :class => "control-label col-sm-3"
      .col-sm-7
        = f.email_field :email, :class => "form-control", :placeholder => "Email", :autofocus => true

    .form-group
      = f.label :password, :class => "control-label col-sm-3"
      .col-sm-7
        = f.password_field :password, :class => "form-control", :placeholder => "Password"

    .form-group
      = f.label :confirm_password, :class => "control-label col-sm-3"
      .col-sm-7
        = f.password_field :confirm_password, :class => "form-control", :placeholder => "Confirm Password"

    .form-group
      .col-sm-offset-3.col-sm-7
        = f.submit "Sign up", :class => "btn btn-block btn-warning c2a-large"

  = render "devise/shared/links"
